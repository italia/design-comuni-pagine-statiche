{{#>base/base title="Servizi scolastici - Nome del Comune" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Servizi scolastici"}}
        {{> cmp-heading/cmp-heading title="Richiesta servizio mensa scolastica"
        description="Hai bisogno di assistenza?
        <a href='' class='title-small-semi-bold t-primary'>Contattaci</a>"}}
      </div>

      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=servizi-pagamento.acconsentire-trattamento-dati-inseriti.step-4
        step-num="4"
        step-title="Preferenze di servizio"
        step-tot="4"
        }}
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">

        {{>cmp-callout/callout
        calloutType="warning"
        icon="it-horn"
        calloutTitle="Attenzione"
        calloutText="Le informazioni che hai fornito hanno valore di dichiarazione.<span class='d-md-block'> Verifica
          che siano corrette.</span>"
        textClass="titillium text-paragraph"
        }}

        <div class="mt-40">
          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          h3-class="mb-0"
          margin-class="mb-4"
          card-title="Richiedente" }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-3 p-lg-4"
          info-title="Giulia Bianchi"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.info-genitore
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-3 p-lg-4"
          info-title="Indirizzo"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.indirizzo-genitore
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-3 p-lg-4"
          info-title="Contatti"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.contatti-genitore
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-3 p-lg-4 mb-0"
          info-title="Documenti"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.documenti-genitore
          }}

          {{/cmp-card/cmp-card-content-box}}
        </div>

        <div class="pt-3 pt-lg-0">
          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          h3-class="mb-0"
          margin-class="mb-4"
          card-title="Beneficiario" }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-3 p-lg-4"
          info-title="Francesco Rossi"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.info-figli
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-3 p-lg-4"
          info-title="Indirizzo"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.indirizzo-figli
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-3 p-lg-4"
          info-title="Documenti"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.documenti-figli
          }}
          {{/cmp-card/cmp-card-content-box}}
        </div>

        <div class="mt-40">
          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          h3-class="mb-0"
          margin-class="mb-4"
          card-title="ISEE" }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-3 p-lg-4"
          info-title="Dati ISEE"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.isee-familiare
          }}
          {{/cmp-card/cmp-card-content-box}}
        </div>

        <div class="mt-40">
          <h3 class="title-xxlarge mb-4">Preferenze di servizio</h3>
          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-3 p-lg-4"
          header-class="pb-2"
          info=true
          info-list=servizi-pagamento.conferma-riepilogo.preferenze-servizio
          }}
          {{/cmp-card/cmp-card-content-box}}
        </div>

        {{>cmp-nav-steps/cmp-nav-steps next=true modalId="modal-terms" saveBtn=true aria-label-save="del servizio mensa"}}
      </div>
    </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-terms-and-conditions}}
</main>
{{/base/base }}