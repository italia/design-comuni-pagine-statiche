{{#>base/base title="Permessi mobilità - Nome del Comune" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Servizi" active="Permessi mobilità"}}
        {{> cmp-heading/cmp-heading
        title="Permesso ZTL"
        subTitle="Inserisci le informazioni necessarie per richiedere il permesso ZTL. <span
          class='d-block d-lg-inline'>Potrai ricontrollare tutti i dati
          nel riepilogo, prima di inviare la richiesta.</span>"
        description="Hai bisogno di assistenza? <a class='title-small-semi-bold t-primary' href='#'>Contattaci</a>"
        desClass="mt-lg-2"
        }}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=permessi-autorizzazioni.controllare-dati-personali.step-2
        step-num="2"
        step-title="Dati generali"
        step-tot="4"
        }}
      </div>
    </div>
    <div class="steppers-content" aria-live="polite">
      <div class="row">
        <div class="col-12 col-lg-3 mb-4 d-none d-lg-block">
          {{>cmp-navscroll/cmp-navscroll accordion-title="INFORMAZIONI RICHIESTE" id="one"
          link-list=permessi-autorizzazioni.controllare-dati-personali.navscroll
          br-none="true"}}
        </div>
        <div class="col-12 col-lg-8 offset-lg-1 mt-2 mt-lg-0">

          {{> cmp-alert-box/cmp-alert-box warning=true message="Ci sono alcune informazioni mancanti o errate"
          alertSpan-class="title-small-semi-bold"
          description-class="mb-1"
          class="mb-50"
          alert-link-list=permessi-autorizzazioni.controllare-dati-personali.alert-list}}

          <div class="it-page-sections-container">
            <section class="it-page-section" id="applicant-info">
              {{#>cmp-card/cmp-card-content-box
              h2-class="mb-1"
              bg-grey=true
              card-title="Richiedente"
              subtitle="Informazione su di te"
              margin-class="mb-40"
              }}

              {{> cmp-info-button-card/cmp-info-button-card
              big-title="Mario Rossi"
              label-2="Codice Fiscale <br> <span>MRARSS72H25H501Y</span>"
              show-more-anagrafica-2="true"
              collapse-id="collapse-parents"
              modalId="modal-vehicle"
              warning=true
              btn-label-text="Aggiungi"
              btnDocumenti=true
              acc-open=true
              anagrafica=permessi-autorizzazioni.controllare-dati-personali.anagrafica
              indirizzo=permessi-autorizzazioni.controllare-dati-personali.indirizzo
              contatti=permessi-autorizzazioni.controllare-dati-personali.contatti
              documenti=permessi-autorizzazioni.controllare-dati-personali.documenti
              }}
              {{/cmp-card/cmp-card-content-box}}
            </section>

            <section class="it-page-section" id="vehicles-info">
              {{#>cmp-card/cmp-card-content-box bg-grey=true
              card-title="Veicolo"
              h2-class="mb-1"
              subtitle="Seleziona o aggiungi il veicolo per il quale vuoi richiedere il permesso"}}

              <fieldset>
                <legend class="visually-hidden">Seleziona o aggiungi il veicolo per il quale vuoi richiedere il permesso
                </legend>

                {{> cmp-info-button-card/cmp-info-button-card
                radio=true
                group="vehicles"
                idRadio="vehicle1"
                radio-title="Mini Countryman F60"
                label-2="Targa <br> <span>CK 345 HB</span>"
                warning=true
                btn=true
                show-more-vehicle="true"
                collapse-id="collapse-benef-1"
                modalId="modal-vehicle-data"
                btn-label-text="Aggiungi"
                vehicle-name="Dati veicolo"
                acc-open=true
                vehicle-data=permessi-autorizzazioni.controllare-dati-personali.vehicle-1
                }}

                {{> cmp-info-button-card/cmp-info-button-card
                radio=true
                group="vehicles"
                idRadio="vehicle2"
                radio-title="Opel Zafira Life"
                label-2="Targa <br> <span>EF 123 JR</span>"
                show-more-vehicle="true"
                collapse-id="collapse-benef-2"
                modalId="modal-vehicle-data"
                vehicle-name="Opel Zafira Life"
                vehicle-data=permessi-autorizzazioni.controllare-dati-personali.vehicle-2
                }}
              </fieldset>

              {{>partials/button/button label="Aggiungi veicolo"
              iconBtn="it-plus-circle"
              sm=true
              class="plus-text mt-20 p-0"}}

              {{/cmp-card/cmp-card-content-box}}
            </section>
          </div>

          {{>cmp-nav-steps/cmp-nav-steps saveBtn=true
          save="true"
          modalId="modal-save-1"
          aria-label-save="per il permesso ztl"
          }}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>
  {{>cmp-modal/modal-vehicle}}

  {{>cmp-modal/modal-vehicle-data}}

  {{>cmp-modal/modal-save}}
</main>
{{/base/base }}