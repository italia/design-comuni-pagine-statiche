{{#>base/base title="Iscrizione alla Scuola dell’infanzia - Nome del Comune" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Iscrizioni"}}
        {{> cmp-heading/cmp-heading
        title="Iscrizione alla scuola dell'infanzia"
        description="Hai bisogno di assistenza?
        <a href='#' class='title-small-semi-bold t-primary'>Contattaci</a>"}}
      </div>

      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=iscrizione-graduatoria.info-progress.step-4
        step-num="4"
        step-title="Riepilogo"
        step-tot="4"
        }}
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">

        {{>cmp-callout/callout
        calloutType="warning"
        icon="it-horn"
        calloutTitle="Attenzione"
        calloutText="Le informazioni che hai fornito hanno valore di dichiarazione.<span class='d-lg-block'> Verifica
          che siano corrette.</span>"
        textClass="titillium text-paragraph"
        }}

        <h2 class="title-xxlarge mb-4 mt-40">Dati Generali</h2>

        {{#>cmp-card/cmp-card-content-box
        class="mb-0"
        bg-grey=true
        h3-title=true
        h3-class="mb-0"
        margin-class="mb-40 mb-lg-4"
        card-title="Richiedente" }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-4 mb-lg-30 p-4"
        info-title="Giulia Bianchi"
        info=true
        info-list=info-genitore.info
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-4 mb-lg-30 p-4"
        info-title="Indirizzo"
        info=true
        info-list=indirizzo-genitore.info
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-4 mb-lg-30 p-4"
        info-title="Contatti"
        info=true
        info-list=contatti-genitore.info
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="p-4 mb-0"
        info-title="Documenti"
        info=true
        info-list=documenti-genitore.info
        }}

        {{/cmp-card/cmp-card-content-box}}

          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          h3-class="mb-0"
          margin-class="mb-40 mb-lg-4"
          card-title="Beneficiario" }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-4"
          info-title="Francesco Rossi"
          info=true
          info-list=info-figli.info
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-4"
          info-title="Indirizzo"
          info=true
          info-list=indirizzo-figli.info
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-4"
          info-title="Documenti"
          info=true
          info-list=documenti-figli.info
          }}
          {{/cmp-card/cmp-card-content-box}}

          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          h3-class="mb-0"
          margin-class="mb-40 mb-lg-4"
          card-title="Altro Genitore" }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-4"
          info-title="Mario Rossi"
          info=true
          info-list=info-altro-genitore.info
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-4"
          info-title="Indirizzo"
          info=true
          info-list=indirizzo-altro-genitore.info
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="mb-4 mb-lg-30 p-4"
          info-title="Contatti"
          info=true
          info-list=contatti-altro-genitore.info
          }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-4"
          info-title="Documenti"
          info=true
          info-list=allegati-altro-genitore.info
          }}
          {{/cmp-card/cmp-card-content-box}}


          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          h3-class="mb-0"
          margin-class="mb-40"
          card-title="ISEE" }}
          {{>cmp-info-summary/cmp-info-summary
          class="p-4"
          info-title="ISEE: 18.000,00€"
          info=true
          info-list=isee-familiare.info
          }}
          {{/cmp-card/cmp-card-content-box}}
    

        <h2 class="title-xxlarge mb-4">Preferenze di servizio</h2>

          {{#>cmp-card/cmp-card-content-box
          bg-grey=true }}

          {{>cmp-info-summary/cmp-info-summary
          class="p-4"
          header-class="pb-2"
          info=true
          info-list=preferenze-servizio.info
          }}
          {{/cmp-card/cmp-card-content-box}}

        {{>cmp-nav-steps/cmp-nav-steps next=true saveBtn=true modalId="modal-terms" aria-label-save="di iscrizione"}}
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-terms-and-conditions}}
</main>
{{/base/base }}