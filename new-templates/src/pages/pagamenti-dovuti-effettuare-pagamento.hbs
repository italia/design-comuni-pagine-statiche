        step-title="Anteprima F24"
        step-tot="5"
        }}
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 d-lg-none mb-40 mt-4">
        <p class="text-paragraph">Rivedi le informazioni da inserire nel documento F24. Conferma e continua per scaricare il documento: lo troverai sempre disponibile nella tua area personale.</p>
      </div>
      <div class="col-12 col-lg-8">
       {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          card-title="Motivo del pagamento"
        }}
          {{>cmp-info-summary/cmp-info-summary
            class="p-4"
            info-title="Contribuente"
            info=true
            info-list=pagamenti-dovuti.effettuare-pagamento.motivo-pagamento.list-1
          }}

          {{>cmp-info-summary/cmp-info-summary
            class="mt-4 mb-30 p-4"
            info-title="H501-Roma"
            info=true
            info-list=pagamenti-dovuti.effettuare-pagamento.motivo-pagamento.list-2
          }}

           {{>cmp-info-summary/cmp-info-summary
            class="mt-4 mb-30 p-4"
            info-title="L736-Venezia"
            info=true
            info-list=pagamenti-dovuti.effettuare-pagamento.motivo-pagamento.list-3
          }}

           {{>cmp-info-summary/cmp-info-summary
            class="mt-4 mb-30 p-4"
            info-title="L065-Tavagnacco"
            info=true
            info-list=pagamenti-dovuti.effettuare-pagamento.motivo-pagamento.list-4
          }}

          <div class="bg-white">
            <p class="title-large-semi-bold card-white">Importo pagamento: 1800,00 â‚¬</p>
          </div>

        {{/cmp-card/cmp-card-content-box}}


        {{>cmp-nav-steps/cmp-nav-steps modalId="modal-terms" next=true saveBtn=true}}
      </div>
    </div>
  </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-terms-and-conditions}}
</main>
{{/base/base }}

