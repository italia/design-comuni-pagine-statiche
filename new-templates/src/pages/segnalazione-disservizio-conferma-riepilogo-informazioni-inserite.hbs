{{#>base/base title="Riepilogo"}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Segnalazione disservizio"}}
        {{> cmp-heading/cmp-heading title="Segnalazione disservizio"}}
      </div>

      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=step-list.disservizio-step-3
        step-num="3"
        step-title="Riepilogo"
        step-tot="3"
        }}
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">


        {{>cmp-callout/callout
        calloutType="warning"
        icon="it-horn"
        calloutTitle="Attenzione"
        calloutText="Le informazioni che hai fornito hanno valore di dichiarazione.<span class='d-lg-block'> Verifica
          che siano corrette.</span>"
        textClass="titillium text-paragraph"
        }}

        <h2 class="title-xxlarge mb-4 mt-40">Segnalazione</h2>

        {{#>cmp-card/cmp-card-content-box
        class="mb-0"
        bg-grey=true
        h3-title=true
        h3-class="mb-0"
        margin-class="mb-4"
        card-title="Disservizio" }}

        {{>cmp-info-summary/cmp-info-summary
        class="p-3 p-lg-4"
          header-class="pb-2"
          info=true
        info-list=disservizio-info.list
        }}


        {{/cmp-card/cmp-card-content-box}}

        <h2 class="title-xxlarge mb-4 mt-40">Dati Generali</h2>

        {{#>cmp-card/cmp-card-content-box
        class="mb-0"
        bg-grey=true
        h3-title=true
        h3-class="mb-0"
        margin-class="mb-4"
        card-title="Autore della segnalazione" }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-4 mb-lg-30 p-3 p-lg-4"
        info-title="Giulia Bianchi"
        info=true
        disservizio-page=true
        info-list=disservizio-info.info-author
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="p-3 p-lg-4"
        info-title="Contatti"
        info=true
        disservizio-page=true
        info-list=disservizio-info.info-contacts

        }}

        {{/cmp-card/cmp-card-content-box}}

        {{>cmp-nav-steps/cmp-nav-steps next=true modalId="modal-terms" saveBtn=true}}
      </div>
    </div>
  </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-terms-and-conditions}}
</main>
{{/base/base }}